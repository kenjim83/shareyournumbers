<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Genre:</strong>
  <% @movie.genres.map do |genre| %>
    <%= link_to genre.name, genre_path(genre) %>
  <% end %>
</p>

<p>
  <strong>Poster url:</strong>
  <%= @movie.poster_url %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
